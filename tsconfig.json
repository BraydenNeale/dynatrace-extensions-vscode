{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020", 
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"useUnknownInCatchVariables": true,
		"noImplicitReturns": false,
		"esModuleInterop": true,
	},
}
